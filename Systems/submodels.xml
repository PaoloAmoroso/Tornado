<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <!--
    be very careful inserting submodels. it could mess stuff up.
    table of contents
     0 ~ flares left
     1 ~ flares right
     2 ~ chaff left
     3 ~ chaff right
     4 ~ BK-27 tracer
     5 ~ BK-27 bullet
     6 ~ BK-27 tracer
     7 ~ BK-27 bullet
    -->
    <!-- 0 -->
    <submodel>
        <name>flaresL</name>
        <model>Aircraft/Tornado/Models/Stores/flare.xml</model>
        <trigger>fdm/jsbsim/fcs/boz-1</trigger>
        <speed>700.0</speed>        <!-- ft/sec -->
        <repeat>true</repeat>
        <delay>0.25</delay>
        <count>40</count>
        <offsets>
            <x-m> 1.10</x-m>
            <y-m>-5.00</y-m>
            <z-m> 0.90</z-m>
            <pitch-deg>180</pitch-deg>
        </offsets>
        <life>5</life>
        <buoyancy>0</buoyancy>
        <weight>2.5</weight>
        <eda>1.0</eda>
        <cd>1.0</cd>
        <no-roll>true</no-roll>
        <wind>true</wind>
    </submodel>
