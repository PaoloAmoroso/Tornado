<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <model>
    <name>FlameLNOALS</name>
    <path>Classic/flameL.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>FlameLNOALS</object-name>
    <condition>
      <not><property>/sim/rendering/shaders/skydome</property></not>
    </condition>
  </animation>

  <model>
    <name>FlameLALS</name>
    <path>ALS/flameL.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>FlameLALS</object-name>
    <condition>
      <property>/sim/rendering/shaders/skydome</property>
    </condition>
  </animation>

  <model>
    <name>FlameLHDR</name>
    <path>HDR/flameL.xml</path>
  </model>

  <animation>
    <type>select</type>
    <object-name>FlameLHDR</object-name>
    <condition>
      <property>/sim/rendering/hdr/hdr-enabled</property>
    </condition>
  </animation>

</PropertyList>
