<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>Aircraft/Tornado/Models/Cockpit/Parts/pedals.ac</path>
	<animation>
		<type>translate</type>
		<object-name>pedalL</object-name>
		<object-name>guildeL</object-name>
		<property>controls/flight/rudder</property>
		<factor>-0.05</factor>
		<axis>
			<x>-1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>pedalR</object-name>
		<object-name>guildeR</object-name>
		<property>controls/flight/rudder</property>
		<factor>-0.05</factor>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>pedalL</object-name>
		<expression>
			<product>
				<max>
					<property>controls/gear/brake-left</property>
					<property>controls/gear/brake-parking</property>
				</max>
				<value>-45</value>
			</product>
		</expression>
		<axis>
			<x>0.0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>pedalR</object-name>
		<expression>
			<product>
				<max>
					<property>controls/gear/brake-right</property>
					<property>controls/gear/brake-parking</property>
				</max>
				<value>-45</value>
			</product>
		</expression>
		<axis>
			<x>0.0</x>
			<y>1.0</y>
			<z>0.0</z>
		</axis>
	</animation>
</PropertyList>
