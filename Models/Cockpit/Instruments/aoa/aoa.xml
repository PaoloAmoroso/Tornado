<?xml version="1.0"?>
<PropertyList>
	<path>aoa.ac</path>
	<effect>
		<inherits-from>Aircraft/Tornado/Models/Effects/instruments/lm2</inherits-from>
		<object-name>BG</object-name>
		<object-name>back</object-name>
		<object-name>flag</object-name>
		<object-name>scale</object-name>
	</effect>
	<animation>
		<type>select</type>
		<object-name>flag</object-name>
		<condition>
			<less-than>
				<property>systems/electrical/ElBus/Voltage</property>
				<value>1</value>
			</less-than>
		</condition>
	</animation>
	<animation>
		<type>scale</type>
		<object-name>scale</object-name>
		<condition>
			<not>
				<property>gear/gear/wow</property>
			</not>
		</condition>
		<property>orientation/alpha-deg</property>
		<x-min>1.0</x-min>
		<y-min>1.0</y-min>
		<z-min>0.0</z-min>
		<z-max>1.0</z-max>
		<x-factor>0.0</x-factor>
		<y-factor>0.0</y-factor>
		<z-factor>0.027</z-factor>
		<z-offset>0.17</z-offset>
	</animation>
</PropertyList>
