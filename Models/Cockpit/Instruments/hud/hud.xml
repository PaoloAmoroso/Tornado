<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>hud.ac</path>
	<model>
		<name>Panel</name>
		<path>Aircraft/Tornado/Models/Cockpit/Instruments/hud/panel_adv.ac</path>
	</model>
	<model>
		<name>Camera</name>
		<path>Aircraft/Tornado/Models/Cockpit/Instruments/hud/camera_ids.ac</path>
	</model>
	<animation>
		<type>select</type>
		<object-name>HUD_Screen</object-name>
		<condition>
			<greater-than>
				<property>fdm/jsbsim/electric/buses/bus-ac</property>
				<value>20</value>
			</greater-than>
		</condition>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>knMode</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>true</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/hud/swMode</property>
				<mask>integer</mask>
				<min>0</min>
				<max>2</max>
				<step>1</step>
				<resolution>1</resolution>
			</binding>
		</action>
		<action>
			<button>4</button>
			<repeatable>true</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/hud/swMode</property>
				<mask>integer</mask>
				<min>0</min>
				<max>2</max>
				<step>-1</step>
				<resolution>1</resolution>
			</binding>
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>knMode</object-name>
		<property>instrumentation/hud/swMode</property>
		<factor>-45</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0215</y-m>
			<z-m>0.063</z-m>
		</center>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>swVV</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/hud/swVV</property>
				<value>0.5</value>
				<value>1.0</value>
			</binding>
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>swVV</object-name>
		<property>instrumentation/hud/swVV</property>
		<factor>-40</factor>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0.006</x-m>
			<y-m>0.0</y-m>
			<z-m>0.067</z-m>
		</center>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>swMach</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/hud/swMach</property>
				<value>0.5</value>
				<value>1.0</value>
			</binding>
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>swMach</object-name>
		<property>instrumentation/hud/swMach</property>
		<factor>-40</factor>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0.006</x-m>
			<y-m>0.0</y-m>
			<z-m>0.067</z-m>
		</center>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>swAlt</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/hud/swAlt</property>
				<value>0.5</value>
				<value>1.0</value>
			</binding>
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>swAlt</object-name>
		<property>instrumentation/hud/swAlt</property>
		<factor>-40</factor>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0.006</x-m>
			<y-m>0.0</y-m>
			<z-m>0.067</z-m>
		</center>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>swHeading</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/hud/swHeading</property>
				<value>0.5</value>
				<value>1.0</value>
			</binding>
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>swHeading</object-name>
		<property>instrumentation/hud/swHeading</property>
		<factor>-40</factor>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0.006</x-m>
			<y-m>0.0</y-m>
			<z-m>0.067</z-m>
		</center>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>knSBS</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/hud/swSbs</property>
			</binding>
		</action>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>knSBS</object-name>
		<property>instrumentation/hud/swSbs</property>
		<factor>-45</factor>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.1356</y-m>
			<z-m>0.0637</z-m>
		</center>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>knSet</object-name>
		<property>instrumentation/altimeter/setting-inhg</property>
		<factor>0</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.024</y-m>
			<z-m>0.024</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/setting-inhg</property>
				<factor>0.01</factor>
				<min>27.90</min>
				<max>31.40</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>knVertDatum</object-name>
		<property>instrumentation/hud/knVertDatum</property>
		<factor>0</factor>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.061</y-m>
			<z-m>0.039</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/hud/knVertDatum</property>
				<factor>1</factor>
				<min>0</min>
				<max>30</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
</PropertyList>
