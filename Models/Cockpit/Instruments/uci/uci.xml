<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<name>UCI</name>
	<path>uci.ac</path>
	<animation>
		<type>rotate</type>
		<object-name>knob</object-name>
		<property>instrumentation/uc-indicator/brightness</property>
		<factor>-90</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0.0</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</center>
	</animation>
	<animation>
        <type>pick</type>
		<object-name>knob</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/uc-indicator/brightness</property>
                <value>0.5</value>
                <value>1.0</value>  
			</binding>
		</action>
	</animation>
	<!-- Lightning -->
	<animation>
		<object-name>lightsRed</object-name>
		<type>material</type>
		<condition>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>0.0</value>
			</equals>
		</condition>
		<emission>
			<factor-prop>instrumentation/uc-indicator/brightness</factor-prop>
			<red>1.0</red>
			<green>0.0</green>
			<blue>0.0</blue>
		</emission>
	</animation>
	<animation>
		<object-name>lightsGreen</object-name>
		<type>material</type>
		<condition>
			<equals>
				<property>gear/gear[0]/position-norm</property>
				<value>1.0</value>
			</equals>
		</condition>
		<emission>
			<factor-prop>instrumentation/uc-indicator/brightness</factor-prop>
			<red>0.0</red>
			<green>1.0</green>
			<blue>0.0</blue>
		</emission>
	</animation>
</PropertyList>
