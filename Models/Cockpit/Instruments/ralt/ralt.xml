<?xml version="1.0"?>
<PropertyList>
	<path>ralt.ac</path>
	<effect>
		<inherits-from>Aircraft/Tornado/Models/Effects/instruments/lm1</inherits-from>
		<object-name>needle</object-name>
		<object-name>bg</object-name>
	</effect>
	<effect>
		<inherits-from>Aircraft/Tornado/Models/Effects/instruments/lm2</inherits-from>
		<object-name>cover</object-name>
	</effect>
	<animation>
		<type>select</type>
		<object-name>flag</object-name>
		<condition>
			<less-than>
				<property>fdm/jsbsim/electric/buses/bus-dc</property>
				<value>1</value>
			</less-than>
		</condition>
	</animation>
		<animation>
		<type>select</type>
		<object-name>needle</object-name>
		<condition>
			<greater-than>
				<property>fdm/jsbsim/electric/buses/bus-dc</property>
				<value>1</value>
			</greater-than>
		</condition>
	</animation>
	<animation>
		<name>needle</name>
		<type>rotate</type>
		<object-name>needle</object-name>
		<property>position/altitude-agl-ft</property>
		<interpolation>
			<entry><ind>0</ind><dep>-180.0</dep></entry>
			<entry><ind>500</ind><dep>20.0</dep></entry>
			<entry><ind>1000</ind><dep>80.0</dep></entry>
			<entry><ind>5000</ind><dep>140.0</dep></entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
</PropertyList>
