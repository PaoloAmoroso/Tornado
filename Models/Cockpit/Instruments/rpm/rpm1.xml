<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>rpm.ac</path>
	<effect>
		<inherits-from>Aircraft/Tornado/Models/Effects/instruments/lm1</inherits-from>
		<object-name>BG</object-name>
		<object-name>needle</object-name>
	</effect>
	<effect>
		<inherits-from>Aircraft/Tornado/Models/Effects/instruments/lm2</inherits-from>
		<object-name>flag</object-name>
		<object-name>indicator</object-name>
		<object-name>drum-1</object-name>
		<object-name>drum-2</object-name>
		<object-name>drum-3</object-name>
	</effect>
	<animation>
		<type>select</type>
		<object-name>flag</object-name>
		<condition>
			<less-than>
				<property>fdm/jsbsim/electric/buses/bus-ac</property><!--the needle is driven by a 400Hz synchronous motor-->
				<value>1</value>
			</less-than>
		</condition>
	</animation>
	<animation>
		<name>needle</name>
		<type>rotate</type>
		<object-name>needle</object-name>
		<property>engines/engine[0]/n1</property>
		<interpolation>
			<entry>
				<ind>0.0</ind>
				<dep>-125.0</dep>
			</entry>
			<entry>
				<ind>120.0</ind>
				<dep>125.0</dep>
			</entry>
		</interpolation>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>drum-1</object-name>
		<property>engines/engine[0]/n1</property>
		<factor>0.1</factor>
		<offset>0</offset>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>-1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>drum-2</object-name>
		<property>engines/engine[0]/n1</property>
		<factor>0.01</factor>
		<offset>0</offset>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>-1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>drum-3</object-name>
		<property>engines/engine[0]/n1</property>
		<factor>0.001</factor>
		<offset>0</offset>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>-1</y>
		</axis>
	</animation>
</PropertyList>
