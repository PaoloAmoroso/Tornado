<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>hsi.ac</path>
	<effect>
		<inherits-from>Aircraft/Tornado/Models/Effects/instruments/lm1</inherits-from>
		<object-name>bg</object-name>
		<object-name>glide</object-name>
		<object-name>az</object-name>
	</effect>
	<effect>
		<inherits-from>Aircraft/Tornado/Models/Effects/instruments/lm2</inherits-from>
		<object-name>compass</object-name>
		<object-name>inner</object-name>
		<object-name>from</object-name>
		<object-name>to</object-name>
		<object-name>loc</object-name>
	</effect>
	<effect>
		<inherits-from>Aircraft/Tornado/Models/Effects/instruments/glass</inherits-from>
		<object-name>glass</object-name>
	</effect>
	<animation>
		<type>select</type>
		<object-name>flag</object-name>
		<condition>
			<less-than>
				<property>fdm/jsbsim/electric/buses/bus-ac</property><!--the needles are driven by 400Hz synchronous motors-->
				<value>1</value>
			</less-than>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>az-flag</object-name>
		<condition>
		<not>
			<property>instrumentation/nav/in-range</property>
		</not>
		</condition>
	</animation>  
	<animation>
		<type>select</type>
		<object-name>gs-flag</object-name>
		<condition>
		<not>
			<property>instrumentation/nav/has-gs</property>
		</not>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>az-flag</object-name>
		<condition>
		<not>
			<property>instrumentation/nav/in-range</property>
		</not>
		</condition>
	</animation>  
	<animation>
		<type>select</type>
		<object-name>dme</object-name>
		<condition>
		<not>
			<property>instrumentation/nav/dme-in-range</property>
		</not>
		</condition>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>dir</object-name>
		<property>orientation/heading-magnetic-deg</property>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>crs</object-name>
		<property>instrumentation/nav[0]/radials/selected-deg</property>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>hdg</object-name>
		<property>instrumentation/heading-indicator/heading-bug-deg</property>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<axis>
			<x>1</x>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>loc</object-name>
		<property>instrumentation/nav/heading-needle-deflection</property>
		<interpolation>
			<entry><ind> 4</ind><dep> 30</dep></entry> 
			<entry><ind> 0</ind><dep>  0</dep></entry>
			<entry><ind>-4</ind><dep>-30</dep></entry>
		</interpolation>
		<center>
			<x-m>-0.03</x-m>
			<y-m> 0.00</y-m>
			<z-m> 0.00</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>gs</object-name>
		<property>instrumentation/nav/gs-needle-deflection</property>
		<interpolation>
			<entry><ind>-4</ind><dep> 30</dep></entry>
			<entry><ind> 0</ind><dep>  0</dep></entry>
			<entry><ind> 4</ind><dep>-30</dep></entry>
		</interpolation>
		<center>
			<x-m>-0.03</x-m>
			<y-m> 0.00</y-m>
			<z-m> 0.00</z-m>
			</center>
		<axis>
			<x>0</x>
			<y>1</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>hdg-knob</object-name>
		<property>instrumentation/heading-indicator/heading-bug-deg</property>
		<factor>1</factor>
		<offset-deg>0</offset-deg>
		<interval-sec>0.075</interval-sec>
		<center>
			<x-m>0</x-m>
			<y-m>-0.0382</y-m>
			<z-m>-0.0335</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<increase>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/heading-indicator/heading-bug-deg</property>
				<step>1</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
		</increase>
		<decrease>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/heading-indicator/heading-bug-deg</property>
				<step>-1</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
		</decrease>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>hdg</tooltip-id>
				<label>Heading</label>
			</binding>
		</hovered>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>crs-knob</object-name>
		<property>instrumentation/nav[0]/radials/selected-deg</property>
		<factor>1</factor>
		<offset-deg>0</offset-deg>
		<interval-sec>0.075</interval-sec>
		<center>
			<x-m>0</x-m>
			<y-m>0.0382</y-m>
			<z-m>-0.0335</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<increase>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<step>1</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
		</increase>
		<decrease>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<step>-1</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
		</decrease>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>crs</tooltip-id>
				<label>Course</label>
			</binding>
		</hovered>
	</animation>
</PropertyList>
