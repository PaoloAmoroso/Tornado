<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
	<path>ehdd.ac</path>
	<effect>
		<inherits-from>Aircraft/Tornado/Models/Effects/displays/ehdd</inherits-from>
		<object-name>EHDD1.screen</object-name>
	</effect>
	<effect>
		<inherits-from>Aircraft/Tornado/Models/Effects/displays/ehdd</inherits-from>
		<object-name>EHDD2.screen</object-name>
	</effect>

	<animation>
		<type>select</type>
		<object-name>EHDD1.screen</object-name>
		<condition>
			<less-than>
				<property>instrumentation/ehdd/serviceable</property>
				<value>2</value>
			</less-than>
		</condition>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>btX2</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>instrumentation/ehdd/btX2</property>
			</binding>
		</action>
	</animation>
	<animation>
		<type>translate</type>
		<object-name>btX2</object-name>
		<property>instrumentation/ehdd/btX2</property>
		<factor>0.0016</factor>
		<axis>
			<x>-1</x>
			<y> 0</y>
			<z> 0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>KN0</object-name>
		<property>instrumentation/ehdd/serviceable</property>
		<interpolation>
			<entry><ind>0</ind><dep>100</dep></entry>
			<entry><ind>2</ind><dep>45</dep></entry>
		</interpolation>
		<center>
			<x-m> 0.0000</x-m>
			<y-m> 0.0568</y-m>
			<z-m>-0.0563</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	<animation>
		<type>pick</type>
		<object-name>KN0</object-name>
		<visible>true</visible>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable>true</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/ehdd/serviceable</property>
				<mask>integer</mask>
				<min>0</min>
				<max>2</max>
				<step>1</step>
				<resolution>1</resolution>
			</binding>
		</action>
		<action>
			<button>4</button>
			<repeatable>true</repeatable>
			<interval-sec>0.1</interval-sec>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/ehdd/serviceable</property>
				<mask>integer</mask>
				<min>0</min>
				<max>2</max>
				<step>-1</step>
				<resolution>1</resolution>
			</binding>
		</action>
	</animation>
</PropertyList>
