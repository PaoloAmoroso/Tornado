<?xml version="1.0" encoding="UTF-8"?>
<PropertyList include="Tornado-Common.xml">
	<sim>
		<description>Panavia Tornado ADV</description>
		<variant-of>Tornado-IDS</variant-of>
		<author>Heiko Schulz (3D external model)</author>
		<long-description>The Panavia Tornado Air Defence Variant (ADV) is the interceptor version of the Tornado. It was developed for the Royal Air Force to shoot down Soviet bombers flying over the North Sea from a great distance. It was introduced in 1985.</long-description>
		<status>beta</status>
		<rating>
			<FDM type="int">3</FDM>
			<systems type="int">1</systems>
			<cockpit type="int">2</cockpit>
			<model type="int">5</model>
		</rating>
		<startup>
			<splash-texture>Aircraft/Tornado/splash_adv.png</splash-texture>
		</startup>
		<model>
			<path>Aircraft/Tornado/Models/Tornado-ADV.xml</path>
		</model>
		<model>
			<name>Cockpit-ADV</name>
			<path>Aircraft/Tornado/Models/Cockpit/Cockpit-ADV.xml</path>
		</model>
		<aircraft-type type="int">1</aircraft-type>
		<menubar>
			<default>
				<menu n="100">
					<label>Tornado ADV</label>
					<enabled type="bool">true</enabled>
					<item>
						<label>Select Livery</label>
						<binding>
							<command>nasal</command>
							<script>aircraft.livery.dialog.toggle()</script>
						</binding>
					</item>
					<item>
						<label>Magic Startup</label>
						<binding>
							<command>nasal</command>
							<script>libraries.doMagicStartup();</script>
						</binding>
					</item>
				</menu>
			</default>
		</menubar>
	</sim>

	<nasal>
		<vector>
			<file>Aircraft/Tornado/Nasal/weapons/vector.nas</file>
		</vector>
		<notifications>
			<file>Aircraft/Tornado/Nasal/weapons/ArmamentNotification.nas</file>
			<file>Aircraft/Tornado/Nasal/weapons/GeoBridgedTransmitter.nas</file>
		</notifications>
		<radardist>
			<file>Aircraft/Instruments-3d/radardist/radardist.nas</file>
		</radardist>
		<rcs>
			<file>Aircraft/Tornado/Nasal/rcs.nas</file>
		</rcs>
		<damage>
			<file>Aircraft/MiG-23MLD/Nasal/weapons/damage.nas</file>
		</damage>
		<ai>
			<file>Aircraft/MiG-23MLD/Nasal/weapons/AI_list.nas</file>
		</ai>
		<view>
			<file>Aircraft/MiG-23MLD/Nasal/weapons/MissileView.nas</file>
		</view>
		<armament>
			<file>Aircraft/Tornado/Nasal/weapons/missile-code.nas</file><!-- must be before station-manager -->
		</armament>
		<stations>
			<file>Aircraft/Tornado/Nasal/weapons/station-manager.nas</file><!-- must be before fire-control and pylons -->
		</stations>
		<fc>
			<file>Aircraft/Tornado/Nasal/weapons/fire-control.nas</file><!-- must be before pylons -->
		</fc>
		<pylons>
			<file>Aircraft/Tornado/Nasal/weapons/pylons.nas</file>
		</pylons>
		<awg_9>
			<file>Aircraft/Tornado/Nasal/awg_9.nas</file>
		</awg_9>
		<libraries>
			<file>Aircraft/Tornado/Nasal/libraries.nas</file>
			<file>Aircraft/Tornado/Nasal/librariesADV.nas</file>
			<file>Aircraft/Tornado/Nasal/electrical.nas</file>
			<file>Aircraft/Tornado/Models/Cockpit/Instruments/hud/hud_sbs.nas</file>
			<file>Aircraft/Tornado/Models/Cockpit/Instruments/hud/hud_fd.nas</file>
			<file>Aircraft/Tornado/Models/Cockpit/Instruments/hud/hud_base.nas</file>
			<file>Aircraft/Tornado/Models/Cockpit/Instruments/hud/hud.nas</file>
			<file>Aircraft/Tornado/Models/Cockpit/Instruments/hud/sbs.nas</file>
			<file>Aircraft/Tornado/Models/Cockpit/Instruments/hud/dir.nas</file>
		</libraries>
		<efis>
			<file>Aircraft/Tornado/Models/Cockpit/Instruments/rhwr/TEWS_main.nas</file>
			<file>Aircraft/Tornado/Models/Cockpit/Instruments/tvtab/maps/loader.nas</file>
			<file>Aircraft/Tornado/Models/Cockpit/Instruments/tvtab/Framework.nas</file>
			<file>Aircraft/Tornado/Models/Cockpit/Instruments/tvtab/rdr.nas</file>
